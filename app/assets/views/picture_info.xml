<?xml version="1.0" encoding="utf-8" ?>
<lcui-app>
  <ui>
    <w id="picture-info-panel" class="panel window-side-panel">
      <w class="panel-header">
        <w type="textview-i18n" class="text panel-header-title" data-i18n-key="picture.info.title">文件信息</w>
        <w id="btn-hide-picture-info" class="panel-close-btn">
          <w type="icon" name="close"></w>
        </w>
      </w>
      <w class="panel-body">
        <w id="picture-info-content-wrapper" class="panel-content-wrapper">
          <w id="picture-info-content" class="panel-content scrolllayer">
            <w class="info-item">
              <w type="textview-i18n" class="text info-item-name" data-i18n-key="picture.info.file_name">文件名</w>
              <w id="picture-info-name" type="textview" class="text info-item-value"></w>
            </w>
            <w class="info-item">
              <w type="textview-i18n" class="text info-item-name" data-i18n-key="picture.info.file_date">日期</w>
              <w id="picture-info-time" type="textview" class="text info-item-value"></w>
            </w>
            <w class="info-item">
              <w type="textview-i18n" class="text info-item-name" data-i18n-key="picture.info.file_size">大小</w>
              <w id="picture-info-file-size" type="textview" class="text info-item-value"></w>
            </w>
            <w class="info-item">
              <w type="textview-i18n" class="text info-item-name" data-i18n-key="picture.info.image_resolution">尺寸</w>
              <w id="picture-info-size" type="textview" class="text info-item-value"></w>
            </w>
            <w class="info-item">
              <w type="textview-i18n" class="text info-item-name" data-i18n-key="picture.info.folder_path">文件夹路径</w>
              <w id="picture-info-path" type="textview" class="info-item-value"></w>
              <w id="btn-open-picture-dir" class="link">
                <w type="textview-i18n" class="text" data-i18n-key="picture.info.open_folder">打开文件夹</w>
              </w>
            </w>
            <w class="info-item">
              <w type="textview-i18n" class="text info-item-name" data-i18n-key="picture.info.file_score">评分</w>
              <w id="picture-info-rating" type="starrating"></w>
            </w>
            <w class="info-item">
              <w type="textview-i18n" class="text info-item-name" data-i18n-key="picture.info.file_tags">标签</w>
              <w id="picture-info-tags" class="tag-list"></w>
              <w id="btn-add-picture-tag" class="link">
                <w type="textview-i18n" class="text" data-i18n-key="picture.info.add_tags">添加标签</w>
              </w>
            </w>
          </w>
          <w type="scrollbar" data-parent="picture-info-content-wrapper" data-layer="picture-info-content"/>
        </w>
      </w>
    </w>
  </ui>
</lcui-app>
